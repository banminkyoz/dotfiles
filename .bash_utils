#!/bin/bash
set -e pipefail

# tput colors
BLACK=0
RED=1
GREEN=2
BLUE=4
WHITE=7

# Paths
BASH_ALIASES_PATH=~/.bash_aliases
BASH_UTILS_PATH=~/.bash_utils
BASH_PROFILE_PATH=~/.bash_profile
GIT_CONFIG_PATH=~/.gitconfig
ZSH_PATH=~/.zshrc
ZSH_THEME_PATH=~/.oh-my-zsh/themes/purify.zsh-theme
VIM_PATH=~/.vimrc
TMUX_PATH=~/.tmux.conf
ALACRITTY_PATH=~/.config/alacritty/alacritty.yml
HYPER_PATH=~/.hyper.js

# Paths for yabai & skhd on IOS
YABAI_PATH=~/.config/yabai/yabairc
SKHD_PATH=~/.config/skhd/skhdrc

# Paths for dotfiles on arch
X_DEFAULT_PATH=~/.Xdefaults
X_INITRC_PATH=~/.xinitrc
X_MODMAP_PATH=~/.Xmodmap
X_PROFILE_PATH=~/.xprofile
X_RESOURCE_PATH=~/.Xresources
SXHKDRC_PATH=~/.config/sxhkd/sxhkdrc

# LOCAL
LOCAL_BIN_PATH=~/.local/bin

function copy {
  {
    cp $1 $2 && log_success "Synced $2"
  } || {
    log_error "Can't sync $2"
  }
}

function copy_folder {
  {
    cp -R $1 $2 && log_success "Synced $2"
  } || {
    log_error "Can't sync $2"
  }
}

# make text have cool color
function log {
  tput setaf $GREEN; echo -e $1;
}

function log_success {
  tput setaf $GREEN; echo -e "✔ " $1;
}

function log_error {
  tput setaf $RED; echo -e "✘" $1;
}

# check if a file is exists
# 1: exist | 0: not exist
function is_file_exist {
  local exist=0
  if [ -f $1 ]; then
     local exist=1
  fi
  echo "$exist"
}

# check if a package is installed
# 1: installed | 0: not yet
function is_package_installed {
  local exist=1
  npm list -g --depth=1 --silent | grep $1 >/dev/null 2>&1 || { local exist=0; }
  echo "$exist"
}
