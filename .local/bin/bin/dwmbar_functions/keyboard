#!/bin/sh

dwmbar_keyboard () {
    if [ $(ibus engine) = "Bamboo" ]; then
      KEYBOARD="VI"
    else
      KEYBOARD="EN"
    fi

    printf "%sï„œ  %s" "$DWMBAR_SEPERATOR" "$KEYBOARD" > $DWMBAR_KEYBOARD
}

if [ -z $1 ]; then
  dwmbar_keyboard
  dwmbar
else
  while true
  do
    dwmbar_keyboard
    sleep $1
  done
fi
