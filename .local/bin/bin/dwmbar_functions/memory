#!/bin/sh

dwmbar_memory() {
  MEMORY=$(free --mebi | sed -n '2{p;q}' | awk '{printf ("ï‚®  %2.1f/%2.1fGB\n", ( $3 / 1024), ($2 / 1024))}')
  printf "%s%s" "$DWMBAR_SEPERATOR" "$MEMORY" > $DWMBAR_MEMORY
}

if [ -z $1 ]; then
  dwmbar_memory
else
  while true
  do
    dwmbar_memory
    sleep $1
  done
fi
