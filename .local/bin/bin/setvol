#!/bin/sh

VALUE=$1

# If not a number
re='^[0-9]+$'
if [[ -z $VALUE || ! $VALUE =~ $re ]]; then
  exit
fi

# Minimal value
if [[ $VALUE -lt 20 ]]; then
  VALUE=20
fi

# Maximal value
if [[ $VALUE -gt 100 ]]; then
  VALUE=100
fi

amixer set Master "$VALUE%"
notify-send "ï€¨  Volume: $VALUE%" &
. "$DWMBAR_MODULES/screen" &
