# Kyoz's i3 configurations

#########################         GENERAL        ###############################

set $mod Mod1
set $term --no-startup-id $TERMINAL

# Move status bar to top
set $transparent #00000000

bar {
  id main-bar
  output eDP1
  position top
  font pango:Iosevka Term 8
  status_command i3blocks
  mode dock
  modifier None
  i3bar_command i3bar --transparency
  colors {
    background $transparent
    statusline #FAFAFA
    separator $transparent
    focused_workspace  #52A8FF #5FAFFF #212121
    active_workspace   #52A8FF #5FAFFF #212121
    inactive_workspace #5FAFFF #000000 #5FAFFF
    urgent_workspace   #5FAFFF #000000 #900000
  }
}

bar {
  id second-bar
  output DP1
  position top
  font pango:Iosevka Term 6
  status_command i3blocks
  mode dock
  modifier None
  i3bar_command i3bar --transparency
  colors {
    background $transparent
    statusline #FAFAFA
    separator $transparent
    focused_workspace  #52A8FF #5FAFFF #212121
    active_workspace   #52A8FF #5FAFFF #212121
    inactive_workspace #5FAFFF #000000 #5FAFFF
    urgent_workspace   #5FAFFF #000000 #900000
  }
}

# Windows decoration colors
client.placeholder      #242424 #242424 #242424
client.background       #242424 #242424 #242424
client.focused          #282C34 #282C34 #E5E5E5 #5FAFFF
client.unfocused        #282C34 #222222 #AAAAAA #222222
client.focused_inactive #282C34 #222222 #A9A9A9 #222222
client.urgent           #282C34 #282C34 #F7F7F7 #282C34

# Status bar font & size
font pango:monospace 7

# Gaps
for_window [class="^.*"] border pixel 1
gaps inner 8
gaps outer 2


#########################          BINDINGS          ###########################

# General
bindsym $mod+d exec "dmenu_run -nf '#BBBBBB' -nb '#222222' -sb '#5FAFFF' -sf '#212121' -fn 'Iosevka Term-10' -p 'dmenu prompt &gt;'"
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Open terminal
bindsym $mod+apostrophe   split horizontal ;; exec --no-startup-id samedir
bindsym $mod+slash        split vertical ;; exec --no-startup-id samedir

# Quit terminal, apps
bindsym $mod+q          [con_id="__focused__" instance="^(?!dropdown_).*$"] kill
bindsym $mod+Shift+q    [con_id="__focused__" instance="^(?!dropdown_).*$"] exec --no-startup-id kill -9 `xdotool getwindowfocus getwindowpid`

# Layout toggle (stacked, tabbed, toggle split)
bindsym $mod+e              split toggle
bindsym $mod+f              fullscreen toggle
bindsym $mod+s              layout stacking
bindsym $mod+Shift+space    floating toggle
bindsym $mod+space          focus mode_toggle
bindsym $mod+o              sticky toggle

# Navigations
bindsym $mod+k    focus up
bindsym $mod+j    focus down
bindsym $mod+h    focus left
bindsym $mod+l    focus right

bindsym $mod+Ctrl+k    move up
bindsym $mod+Ctrl+j    move down
bindsym $mod+Ctrl+h    move left
bindsym $mod+Ctrl+l    move right

bindsym $mod+Shift+k    exec --no-startup-id i3resize up
bindsym $mod+Shift+j    exec --no-startup-id i3resize down
bindsym $mod+Shift+h    exec --no-startup-id i3resize left
bindsym $mod+Shift+l    exec --no-startup-id i3resize right

# Workspace Navigation
bindsym $mod+Tab          workspace back_and_forth
bindsym $mod+backslash    workspace back_and_forth

bindsym $mod+m            workspace next
bindsym $mod+n            workspace prev
bindsym $mod+Left         move workspace to output left
bindsym $mod+Right        move workspace to output right

####################         APPLICATIONS BEHAVIORS         ####################

# Other applications
for_window [class="Nemo"] floating enable
for_window [class="Nemo"] resize set 1900 1200
for_window [class="Nemo"] move position center
for_window [window_role="GtkFileChooserDialog"] resize set 800 600
for_window [window_role="GtkFileChooserDialog"] move position center

####################      I3 DEFAULT WORKSPACE BINDING      ####################

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

